<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    tools:context="com.fmtech.circleprogress.MainActivity">

    <com.fmtech.circleprogress.view.CircleProgressBar
        android:id="@+id/circle_progressbar"
        android:layout_width="200dp"
        android:layout_height="200dp"
        app:circleColor="@color/color_pumice"
        app:progressColor="@color/color_blue"
        app:maxProgress="100"
        app:circleStrokeWidth="16dp"
        app:textColor="@color/colorAccent"
        app:textSize="20sp"/>

</LinearLayout>
