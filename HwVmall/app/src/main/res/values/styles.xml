<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="TextSmallStyle">
        <item name="android:textSize">@dimen/font11_sp</item>
    </style>

    <style name="TextNormalStyle">
        <item name="android:textSize">@dimen/font14_sp</item>
    </style>

    <style name="TextSmallStyle.BlackSixtyFive" parent="TextSmallStyle">
        <item name="android:textColor">@color/black_sixty_five</item>
    </style>

    <style name="TextSmallStyle.BlackEightFive" parent="@style/TextSmallStyle">
        <item name="android:textColor">@color/black_eighty_five</item>
    </style>
</resources>
